@model ChampionshipManager.ViewModel.ChampionshipManageViewModel

@{
ViewData["Title"] = "Championship Management";
var numberOfTeams = Model.TeamDataList.Count;
var numberOfLevels = Math.Sqrt(numberOfTeams);
var helper = numberOfTeams/2;
}

@section head{
<style>
    .rectangle {
        background: blue;
        margin-bottom: 5px;
        border-style: solid;
        border-width: 1px;
        border-color: black;
        border-radius: 4px; 
    }

    .brackets-1 {
        padding: 62% 0;
    }

    .brackets-2 {
        padding: 124% 0;
    }

    .brackets-3 {
        padding: 124% 0;
    }

    .brackets-semi-final {
        padding: 156% 0;
    }

    .brackets-final {
        padding: 166% 0;
    }

    .bracket {
        padding-top: 25%;
    }

    .column {
        position: relative;
        width: 15%;
        margin-right: 120px;
    }

    #container {
        overflow-x: auto;
        display: flex;
    }
</style>
}

<!-- @foreach (var team in Model.TeamDataList){
    @team.Name
    <text><br></text>
} -->

<div id="container">
    @while (numberOfTeams >= 0){

        <div class="column">

        while (helper != numberOfTeams)
        {
            <div class="brackets-@(numberOfLevels)">
                <div class="bracket">
                    <div class="rectangle" id="@numberOfTeams - 1">teste</div>
                    <div class="rectangle" id="@numberOfTeams - 2">teste</div>
                </div>
            </div>

            numberOfTeams -= 2;
            numberOfLevels--;
        }

        </div>

        helper = helper/2;
    }
</div>

