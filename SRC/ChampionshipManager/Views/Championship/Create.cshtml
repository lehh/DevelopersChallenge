@model ChampionshipManager.ViewModel.ChampionshipCreateViewModel

@{
    ViewData["Title"] = "Create Championship";
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial">
}

@using (Html.BeginForm("Create", "Championship", null, FormMethod.Post, true, null))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)

        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })

        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TeamSelectList, new { htmlAttributes = new { @class = "col-sm-2" } })

        @Html.ListBoxFor(m => m.TeamIdList, Model.TeamSelectList, new { @class = "form-control", multiple="multiple", size="16", height="100%" })

        @Html.ValidationMessageFor(m => m.TeamSelectList)
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
}
